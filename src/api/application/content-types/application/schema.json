{
  "kind": "collectionType",
  "collectionName": "applications",
  "info": {
    "singularName": "application",
    "pluralName": "applications",
    "displayName": "application"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "email": {
      "type": "email",
      "required": true
    },
    "resume": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images",
        "files"
      ]
    },
    "coverLetter": {
      "type": "richtext"
    },
    "appliedAt": {
      "type": "datetime",
      "required": true
    },
    "vacancy": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::vacancy.vacancy",
      "inversedBy": "applications"
    },
    "phoneNumber": {
      "type": "string",
      "required": true
    },
    "qualification": {
      "type": "enumeration",
      "default": "not_assessed",
      "enum": [
        "not_assessed",
        "fail",
        "pass",
        "reserve"
      ]
    },
    "vacancyTitle": {
      "type": "string",
      "required": true
    }
  }
}
